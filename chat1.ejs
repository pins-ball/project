<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= roomName %> 채팅</title>
  <style>
    /* 채팅 스타일을 추가해주세요. */
  </style>
</head>
<body>
  <h1><%= roomName %> 채팅</h1>

  <div id="messages">
    <!-- 메시지를 표시할 영역 -->
  </div>

  <form id="chat-form">
    <input type="text" id="message-input" placeholder="메시지 입력" required>
    <button type="submit">전송</button>
  </form>

  <script>
    const socket = io();

    // 서버로부터 새로운 메시지를 받으면 화면에 추가합니다.
    socket.on('newRoomMessage', (data) => {
      const messageElement = document.createElement('p');
      messageElement.textContent = `${data.name}: ${data.message}`;
      document.getElementById('messages').appendChild(messageElement);
    });

    // 채팅 폼 제출 시 새로운 메시지를 서버로 전송합니다.
    document.getElementById('chat-form').addEventListener('submit', (e) => {
      e.preventDefault();

      const message = document.getElementById('message-input').value;
      const name = '<%= name %>'; // 사용자 이름을 적절한 값으로 변경해주세요.
      const roomName = '<%= roomName %>'; // 방 이름을 적절한 값으로 변경해주세요.

      socket.emit('newRoomMessage', { message: message, name: name, roomName: roomName });

      document.getElementById('message-input').value = '';
    });
  </script>
</body>
</html>
